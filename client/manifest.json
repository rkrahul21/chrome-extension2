{
  "manifest_version": 3,
  "name": "LinkedIn Auto Engagement",
  "version": "1.0",
  "description": "Auto-like and comment on LinkedIn feed.",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*", "https://www.linkedin.com/"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}